    <!-- Validate Data -->
    <script type="text/javascript">

        (function ($, W, D) {

            var JQUERY4U = {};

            JQUERY4U.UTIL =
            {
                setupFormValidation: function () {
                    //validation rules
                    $("#productedit-form").validate({
                        rules: {
                            Cat: "required",
                            Name: "required",
                            Image: "required",
                            //PriceRetail: "required",
                            //PricePromotion: "required"
                        },
                        messages: {
                            Cat: "Phải nhập Nhóm Dịch vụ",
                            Name: "Phải nhập tên Dịch vụ",
                            Image: "Phải nhập ảnh Dịch vụ",
                            //PriceRetail: "Phải nhập giá bán",
                            //PricePromotion: "Phải nhập giá khuyến mãi"
                        },
                        submitHandler: function (form) {
                            form.submit();
                        }
                    });
                }
            }

            //when the dom has loaded setup form validation rules
            $(D).ready(function ($) {
                JQUERY4U.UTIL.setupFormValidation();
            });

        })(jQuery, window, document);
    </script>
    <!-- End Validate Data -->
}

